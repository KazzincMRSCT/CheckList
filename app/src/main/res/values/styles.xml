<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkLight1</item>
        <item name="colorPrimaryDark">@color/colorDarkLight1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:windowBackground">@color/colorDark</item>
        <item name="android:colorPrimaryDark">@color/colorDarkLight1</item>
        <item name="android:editTextColor">@color/colorDarkLight4</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorBtnText</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDarkLight4</item>
        <item name="android:actionBarTabStyle">@color/colorAccent</item>
    </style>
    <style name="MyList" parent="@android:style/Widget.ListView">
        <item name="android:textColor">@color/colorDarkLight4</item>
        <item name="colorPrimary">@color/colorDarkLight4</item>
    </style>
    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/colorDarkLight4</item>
        <item name="android:textColorPrimary">@color/colorDarkLight4</item>
        <item name="android:colorAccent">@color/colorDarkLight4</item>
        <item name="android:colorBackground">@color/colorDark</item>
        <item name="android:windowBackground">@color/colorDark</item>
        <item name="android:background">@color/colorDarkLight</item>
    </style>
    <style name="MyAlertDialogThemeSpinner" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textColorPrimary">@color/colorDark</item>
        <item name="android:colorAccent">@color/colorDark</item>
        <item name="android:colorBackground">@color/colorDarkLight3</item>
        <item name="android:windowBackground">@color/colorDarkLight3</item>
        <item name="android:background">@color/colorDarkLight3</item>
    </style>
    <style name="MyAlertDialogThemeDatePicker" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textColorPrimary">@color/colorDark</item>
        <item name="android:colorAccent">@color/colorDarkLight4</item>
        <item name="android:colorBackground">@color/colorDarkLight3</item>
        <item name="android:windowBackground">@color/colorDarkLight3</item>
        <item name="android:background">@color/colorDarkLight3</item>
    </style>
    <style name="MyAlertDialogTheme14" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/colorDarkLight3</item>
        <item name="android:textColorPrimary">@color/colorDarkLight4</item>
        <item name="android:colorAccent">@color/colorDarkLight4</item>
        <item name="android:colorBackground">@color/colorDark</item>
        <item name="android:windowBackground">@color/colorDark</item>
        <item name="android:background">@color/colorDarkLight</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/exo_2_light</item>
    </style>
    <style name="BottomNavigation.ActiveItemTextAppearance" parent="Widget.Design.BottomNavigationView">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/colorGreen</item>
    </style>
    <style name="MyAlertDialogTheme15" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/colorDarkLight4</item>
        <item name="android:textColorPrimary">@color/colorDarkLight4</item>
        <item name="android:colorAccent">@color/colorDarkLight4</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorDarkLight3</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@color/colorDarkLight3</item>
        <item name="tabSelectedTextColor">@color/colorDarkLight4</item>
    </style>
    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/colorDarkLight2</item>
        <item name="colorControlNormal">@color/colorDarkLight4</item>
        <item name="colorControlActivated">@color/colorDarkLight4</item>
        <item name="colorControlHighlight">@color/colorDarkLight4</item>
    </style>

</resources>
