<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cuprum"
                android:text="Сотрудник"
                android:textColor="@color/colorDarkLight4"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorDarkLight">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/exo_2_light"
                        android:gravity="left"
                        android:textColor="@color/colorDarkLight3"
                        android:textSize="20sp"
                        android:paddingBottom="10dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvServiceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cuprum"
                android:text="Сервис"
                android:textColor="@color/colorDarkLight4"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorDarkLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/btnImprovement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="45dp"
                        android:background="@drawable/btn_border_bottom"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Предложения по улучшению"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight3"
                        android:theme="@style/AppTheme.Button" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cuprum"
                android:text="ЭЦП"
                android:textColor="@color/colorDarkLight4"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorDarkLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/btnKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="45dp"
                        android:background="@drawable/btn_border_bottom"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Ключ зарегистрирован"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight3"
                        android:theme="@style/AppTheme.Button" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/titleVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cuprum"
                android:text="Помощь"
                android:textColor="@color/colorDarkLight4"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorDarkLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/btnVideoLesson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="45dp"
                        android:background="@drawable/btn_border_bottom"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Обучающие видео ролики"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight3"
                        android:theme="@style/AppTheme.Button" />

                    <Button
                        android:id="@+id/btnDocs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="45dp"
                        android:background="@drawable/btn_border_bottom"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Документы "
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight3"
                        android:theme="@style/AppTheme.Button" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cuprum"
                android:text="Документы"
                android:textColor="@color/colorDarkLight4"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorDarkLight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="45dp"
                        android:background="@drawable/btn_borders"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Удостоверение по специальности"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight3"
                        android:theme="@style/AppTheme.Button" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="60dp"
                        android:background="@drawable/btn_border_bottom"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Удостоверение по проверке знаний"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight3"
                        android:theme="@style/AppTheme.Button" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="45dp"
                        android:background="@drawable/btn_border_bottom"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Удостоверение по охране труда"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight3"
                        android:theme="@style/AppTheme.Button" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>