<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskFragment"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_2_light"
                android:text="Наряд-задание"
                android:textAlignment="center"
                android:textColor="@color/colorDarkLight4"
                android:textSize="24sp" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/taskContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">


        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llRisk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-4dp"
                    android:layout_marginRight="-4dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnRisk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-5px"
                        android:height="60dp"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Риски"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight4"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme.Button" />

                    <Button
                        android:id="@+id/btnSafety"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="60dp"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Меры безопасности"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight4"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme.Button" />

                    <Button
                        android:id="@+id/btnInstruction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="60dp"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Инструкции"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight4"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme.Button" />

                    <Button
                        android:id="@+id/btnMark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="60dp"
                        android:clickable="true"
                        android:drawableRight="@drawable/right16"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="left|center_vertical"
                        android:hapticFeedbackEnabled="true"
                        android:text="Марк. эскизы"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight4"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme.Button" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TDContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TDButtonContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</FrameLayout>