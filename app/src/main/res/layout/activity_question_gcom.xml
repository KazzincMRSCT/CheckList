<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".QuestionGCOMActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workPlaceGCOM"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="@color/colorDarkLight4"
            android:textSize="16sp"
            android:fontFamily="@font/exo_2_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/question_tv_gcom"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="..."
            android:textColor="@color/colorDarkLight3"
            android:textSize="24sp"
            android:fontFamily="@font/cuprum"
            android:layout_gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_1_gcom"
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:text="Не соответствует"
            android:textColor="@color/colorDarkLight3"
            android:background="@color/colorDarkLight1"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btn_2_gcom"
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:text="Частично соответствует"
            android:textColor="@color/colorDarkLight3"
            android:background="@color/colorDarkLight1"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"/>/>

        <Button
            android:id="@+id/btn_3_gcom"
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:text="Полностью соответствует"
            android:textColor="@color/colorDarkLight3"
            android:background="@color/colorDarkLight1"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"/>/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/photos_gcom"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_gravity="left"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_gcom"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="2"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint="Примечание"
            android:textColorHint="@color/colorDarkLight2"
            android:textColor="@color/colorDarkLight3"/>

        <ImageView
            android:id="@+id/imageViewGcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:src="@drawable/camera_gold"
            android:paddingLeft="30dp"/>
    </LinearLayout>

</LinearLayout>