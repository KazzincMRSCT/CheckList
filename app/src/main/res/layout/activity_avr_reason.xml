<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvrReasonActivity"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_2_light"
            android:text="Утечка с РВД"
            android:textAlignment="center"
            android:textColor="@color/colorDarkLight4"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>


        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РВД на буровом модуле"
            android:hapticFeedbackEnabled="true"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkLight4"
            android:theme="@style/AppTheme.Button"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РВД на гидроцилиндр"
            android:hapticFeedbackEnabled="true"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkLight4"
            android:theme="@style/AppTheme.Button"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РВД на узлы и агрегаты"
            android:hapticFeedbackEnabled="true"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkLight4"
            android:theme="@style/AppTheme.Button"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РВД на сочленении"
            android:hapticFeedbackEnabled="true"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkLight4"
            android:theme="@style/AppTheme.Button"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РВД по левой стреле"
            android:hapticFeedbackEnabled="true"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkLight4"
            android:theme="@style/AppTheme.Button"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РВД по правой стреле"
            android:hapticFeedbackEnabled="true"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkLight4"
            android:theme="@style/AppTheme.Button"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РВД по ковшевой группе"
            android:hapticFeedbackEnabled="true"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkLight4"
            android:theme="@style/AppTheme.Button"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РВД утечка по стреле"
            android:hapticFeedbackEnabled="true"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkLight4"
            android:theme="@style/AppTheme.Button"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewCap2"
