<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".QuestionActivityEdit"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workPlaceEdit"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="@color/colorDarkLight4"
            android:textSize="18sp"
            android:fontFamily="@font/exo_2_light"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question_tv_edit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="..."
            android:textColor="@color/colorDarkLight3"
            android:textSize="22sp"
            android:fontFamily="@font/cuprum"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_1_edit"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:text="Хорошо"
            android:textColor="@color/colorDarkLight3"
            android:background="@color/colorDarkLight1"/>

        <Button
            android:id="@+id/btn_2_edit"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:text="Плохо"
            android:textColor="@color/colorDarkLight3"
            android:background="@color/colorDarkLight1"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btn_3_edit"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:text="Неприменимо"
            android:textColor="@color/colorDarkLight3"
            android:background="@color/colorDarkLight1"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/photos_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_gravity="left"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_edit"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="2"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint="Примечание"
            android:textColorHint="@color/colorDarkLight2"
            android:textColor="@color/colorDarkLight3"/>

        <ImageView
            android:id="@+id/imageView_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:src="@drawable/camera_gold"
            android:paddingLeft="30dp"/>
    </LinearLayout>

</LinearLayout>