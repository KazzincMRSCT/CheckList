<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Pnvr1Activity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_2_light"
                android:paddingBottom="10dp"
                android:text="1. Общая информация"
                android:textAlignment="center"
                android:textColor="@color/colorDarkLight3"
                android:textSize="24sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorDarkLight1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/DateCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:fontFamily="@font/exo_2_light"
                    android:gravity="center"
                    android:text="Дата:"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/DatePNVR"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="01.04.2020"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/btnPeople"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Проверяемый персонал"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnTaskReview"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Задание"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvTaskReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не заполнено"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnWorkPlace"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Место работы"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvWorkPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnResponsible"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Ответственный"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvResponsible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnTeam"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Участники команды"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnPodrjad"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Название подрядной организации"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvPodrjad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не применимо"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnTool"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Инструмент оценки рисков"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvTool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnDangers"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Характерные смертельные опасности"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvDangers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Название рассматриваемой инструкции"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="60dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:fontFamily="@font/exo_2_light"
                        android:textSize="15sp"
                        android:background="@color/colorDarkLight1"
                        android:text="Задание выполнялось в соответствии с инструкцией, регламентом, ПВР и пр."
                        android:textColor="@color/colorDarkLight4"
                        android:layout_marginTop="-9dp"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/swСonformity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minWidth="150dp"
                        android:paddingTop="10dp"
                        android:paddingRight="15dp"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:theme="@style/SwitchCompatTheme" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnAssessment"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Общая оценка наблюдаемой деятельности"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvAssessment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnShortReview"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Краткий обзор по набюдению или взаимодействию"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvShortReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp"
                    android:text="Не заполнено"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorDarkLight1" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/exo_2_light"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="2. Выявленное нарушение или положительное действие"
                    android:textAlignment="center"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnClassBehavior"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Нарушение/положительное действие относится к..."
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvClassBehavior"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnBehaviorReview"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Описание нарушения/положительного действия"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvBehaviorReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не заполнено"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnPSO"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Нарушение/положительное действие относится к ПСО..."
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvPSO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp"
                    android:text="Не выбрано"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnActionReview"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Меры, предпринятые незамедлительно (если применимо)"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvActionReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не заполнено"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnEvent"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/focus"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:fontFamily="@font/exo_2_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:hapticFeedbackEnabled="true"
                    android:text="Информация о проведении необходимых мероприятий"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDarkLight3"
                    android:textSize="16sp"
                    android:theme="@style/AppTheme.Button" />

                <TextView
                    android:id="@+id/tvEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Не заполнено"
                    android:textColor="@color/colorDarkLight4"
                    android:textSize="14sp" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnPNVRSave"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:hapticFeedbackEnabled="true"
                        android:text="СОХРАНИТЬ"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight3"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme.Button"
                        />

                    <Button
                        android:id="@+id/btnPNVRCancel"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:hapticFeedbackEnabled="true"
                        android:text="ОТМЕНА"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkLight3"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme.Button"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>