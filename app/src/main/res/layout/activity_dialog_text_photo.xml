<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DialogTextPhotoActivity">


<EditText
    android:id="@+id/dialogEditTextPhoto"
    android:inputType="textMultiLine"
    android:lines="8"
    android:minLines="6"
    android:gravity="top|left"
    android:maxLines="10"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:textColor="@color/colorDarkLight4"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="5dp"
    android:hint="Введите текст..."
    android:textColorHint="@color/colorDarkLight3"
    android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPNVRPCamera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:src="@drawable/camera_gold"
            android:paddingLeft="0dp"/>

        <ImageView
            android:id="@+id/imageViewPNVRPPicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:src="@drawable/gallery_3"
            android:paddingLeft="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/photosPNVR"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_gravity="left"></LinearLayout>

</LinearLayout>



